generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Supervisor {
  id        String    @id @default(cuid())
  name      String
  email     String?   @unique
  tier      String
  groups    Group[]
  sessions  Session[]
  reviews   SupervisorReview[]
  createdAt DateTime  @default(now())
}

model Fellow {
  id        String   @id @default(cuid())
  name      String
  groups    Group[]
  sessions  Session[]
  createdAt DateTime @default(now())
}

model Group {
  id           String     @id @default(cuid())
  code         String     @unique
  fellow       Fellow     @relation(fields: [fellowId], references: [id])
  fellowId     String
  supervisor   Supervisor @relation(fields: [supervisorId], references: [id])
  supervisorId String
  sessions     Session[]
  createdAt    DateTime   @default(now())
}

enum SessionStatus {
  PENDING_ANALYSIS
  PROCESSED
  FLAGGED_FOR_REVIEW
  SAFE
  RISK
  NEEDS_DISCUSSION
}

model Session {
  id               String           @id @default(cuid())
  group            Group            @relation(fields: [groupId], references: [id])
  groupId          String
  fellow           Fellow           @relation(fields: [fellowId], references: [id])
  fellowId         String
  supervisor       Supervisor       @relation(fields: [supervisorId], references: [id])
  supervisorId     String
  scheduledAt      DateTime
  completedAt      DateTime
  status           SessionStatus    @default(PENDING_ANALYSIS)
  transcript       String
  aiAnalysis       AIAnalysis?
  supervisorReview SupervisorReview?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
}

enum RiskFlag {
  SAFE
  RISK
}

model AIAnalysis {
  id                       String     @id @default(cuid())
  session                  Session    @relation(fields: [sessionId], references: [id])
  sessionId                String     @unique
  summary                  String
  contentCoverageScore     Int
  contentCoverageRationale String
  facilitationScore        Int
  facilitationRationale    String
  protocolSafetyScore      Int
  protocolSafetyRationale  String
  riskFlag                 RiskFlag
  riskQuote                String?
  riskRationale            String
  rawModelResponse         Json?
  createdAt                DateTime   @default(now())
}

enum ReviewDecision {
  VALIDATED
  OVERRIDDEN
}

enum FinalStatus {
  SAFE
  RISK
  NEEDS_DISCUSSION
}

model SupervisorReview {
  id           String        @id @default(cuid())
  session      Session       @relation(fields: [sessionId], references: [id])
  sessionId    String        @unique
  supervisor   Supervisor    @relation(fields: [supervisorId], references: [id])
  supervisorId String
  finalStatus  FinalStatus
  decision     ReviewDecision
  note         String?
  createdAt    DateTime      @default(now())
}
